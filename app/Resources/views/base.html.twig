<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %} Weather Display {% endblock %}</title>
    </head>
    <body>
        <div id="app"> </div>
    </body>
</html>
{% block javascripts %}
    {% if app.environment == 'dev' %}
        <script src="http://127.0.0.1:3000/static/bundle.js"></script>
    {% else %}
        <script src="{{ asset('dist/bundle.js') }}"></script>
    {% endif %}
{% endblock %}