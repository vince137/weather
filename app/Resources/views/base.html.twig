<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %} Display {% endblock %}</title>
        <link href="{{ asset('css/main.css') }}" rel="stylesheet" />
    </head>
    <body>
        <div id="navbar"> </div>
        <div id="app"><div id="content"> {% block body %} {%endblock%} </div></div>
    </body>
</html>

{% block javascripts %}
    {% if app.environment == 'dev' and app.request.uri matches '#api\/#' == 0 %}
        <script src="{{ asset('dist/bundle.js') }}"></script>
    {% endif %}
{% endblock %}